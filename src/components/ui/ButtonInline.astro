---
const { ...props } = Astro.props;
---

<a {...props}><slot /></a>

<style>
  a[target="_blank"] {
    position: relative;
    padding-inline-end: 1.3rem;
  }
  a[target="_blank"]::after {
    content: "";
    width: 1rem;
    height: 100%;
    position: absolute;
    right: 0;
    top: 0;
    background-image: url("/IconExtern.svg");
    background-size: contain;
    background-position: center;
    background-repeat: no-repeat;
  }
</style>
